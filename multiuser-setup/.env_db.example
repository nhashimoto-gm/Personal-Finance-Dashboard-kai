# Personal Finance Dashboard - Multi-User Version
# Environment Configuration

# ==================================================
# Database Configuration
# ==================================================
DB_HOST=localhost
DB_USERNAME=finance_user
DB_PASSWORD=your_strong_password_here
DB_DATABASE=finance_multiuser_db

# ==================================================
# Application Settings
# ==================================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# ==================================================
# Security Settings
# ==================================================
# Generate these with: php -r "echo bin2hex(random_bytes(16)) . PHP_EOL;"
SESSION_SECRET=generate_random_32_character_string
CSRF_SECRET=generate_another_random_32_character_string

# ==================================================
# Email Configuration (Optional)
# ==================================================
MAIL_ENABLED=false
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Finance Dashboard"
MAIL_ENCRYPTION=tls

# ==================================================
# Session Settings
# ==================================================
SESSION_LIFETIME=1800
SESSION_DOMAIN=
SESSION_PATH=/
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# ==================================================
# Rate Limiting
# ==================================================
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# ==================================================
# Feature Flags
# ==================================================
FEATURE_EMAIL_VERIFICATION=false
FEATURE_SAMPLE_DATA=true
FEATURE_REGISTRATION=true

# ==================================================
# Logging
# ==================================================
LOG_LEVEL=debug
LOG_FILE=/var/log/finance_dashboard.log
